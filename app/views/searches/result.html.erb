<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 pb-5 mr-auto">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">診断結果</h1>
  </div>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label bg-info text-white">内面</label>
    <div class="col-sm-10 border border-info">
      <%= simple_format @result['Value']['Sense']['In'] %>
      <%= simple_format @result['Value']['Gift']['In'] %>
      <%= simple_format @result['Value']['Cycle']['In'] %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label bg-success text-white">外面</label>
    <div class="col-sm-10 border border-success">
      <%= simple_format @result['Value']['Gift']['Out'] %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label bg-primary text-white">大切にしているもの</label>
    <div class="col-sm-10 border border-primary">
      <%= simple_format @result['Value']['Contents']['1']['ContentsData'] %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label bg-warning text-white">こう言われると嬉しい</label>
    <div class="col-sm-10 border border-warning">
      <%= simple_format @result['Value']['Contents']['2']['ContentsData'] %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label bg-danger text-white">これを言われると深く傷つく</label>
    <div class="col-sm-10 border border-danger">
      <%= simple_format @result['Value']['Contents']['3']['ContentsData'] %>
    </div>
  </div>

  <%= form_tag('/searches') do %>
  <% if @favorite.present? %>
    <% @favorite.errors.full_messages.each do |message| %>
    <%= message %>
    <br>
    <% end %>
    <% end %>
    <input type="hidden" value="<%= @year %>" name="favorite[year]" />
    <input type="hidden" value="<%= @month %>" name="favorite[month]" />
    <input type="hidden" value="<%= @day %>" name="favorite[day]" />
    <input type="hidden" value="<%= @sex %>" name="favorite[sex]" />
    <input type="text" value="" placeholder="name" name="favorite[name]" class="input-group mt-2" />
    <%= submit_tag 'お気に入り保存', class: 'btn btn-danger mt-2' %>
  <% end %>
  <a href="http://twitter.com/intent/tweet?text=内面 <%= @result['Gift']['in'] %> !?&url=http://192.168.99.100:3000/searches/<%= @URL %>&hashtags=BirthdayKarte&via=yuu_uni1211 "><%= image_tag 'twitter.png' %></a>
  <a href="http://www.facebook.com/sharer.php?u=http://192.168.99.100:3000/searches/<%= @URL %>"><%= image_tag 'facebook.png' %></a>
</main>